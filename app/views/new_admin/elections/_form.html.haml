= f.input :name
= f.input :country_id do
  %span.add-on
    %i.icon-flag
  = f.input_field :country_id, collection: Country.all.order_by(name: :asc)
= f.input :date, :wrapper => :prepend do
  %span.add-on
    %i.icon-calendar
  = f.input_field :date
= f.button :submit

:javascript
  $("#election_date").datepicker({
    "format": "yyyy-mm-dd",
    "weekStart": 1,
    "autoclose": true
  })

  $("#election_country_id").select2({
    "maximumSelectionSize": 1
  })
