= f.input :address
= f.input :birthday
= f.input :phone
= f.input :email
= render "url", f: f, name: t('backoffice.website'), input: :website, website:""
= render "url", f: f, name: "", input: :facebook, label: image_tag('web/icons/facebook.png'), website: "facebook"
= render "url", f: f, name: "", input: :twitter, label: image_tag('web/icons/twitter.png'), website: "twitter"
= render "url", f: f, name: "", input: :youtube, label: image_tag('web/icons/youtube.png'), website: "youtube", hint: ""
= render "url", f: f, name: "", input: :wikipedia, label: image_tag('web/icons/wikipedia.png'), website: "wikipedia", hint: ""
= f.input :biography, as: :text, input_html: { class: "input-xxlarge", maxlength: 300, rows: 5 }, hint: '300 ' + t('backoffice.characters_max')
= f.input :introduction, as: :text, input_html: { class: "input-xxlarge", maxlength: 1000, rows: 16 }, hint: '1000 ' + t('backoffice.characters_max')
= f.submit t('backoffice.submit'), class: "btn btn-success submit-btn"
