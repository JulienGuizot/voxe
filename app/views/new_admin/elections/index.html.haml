%h2 Elections management

= render "/new_admin/flash", flash: flash

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th Name
      %th Published
      %th Date
      %th Actions
  %tbody
    - @elections.each do |e|
      %tr
        %td
          = e
        %td
          - if e.published
            = link_to "", new_admin_election_unpublish_path(e.id), class: "election-published", method: :post
          - else
            = link_to "", new_admin_election_publish_path(e.id), class: "election-unpublished", method: :post
        %td
          = e.date
        %td
          = link_to "Edit", edit_new_admin_election_path(e.id), class: "btn btn-small"
          = link_to new_admin_election_path(e.id), method: :delete, confirm: "Sure ?", class: "btn btn-small btn-danger" do
            Delete
