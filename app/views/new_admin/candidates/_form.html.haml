= simple_form_for [:new_admin, @candidate] do |f|
  = f.input :first_name
  = f.input :last_name
  - if @candidate.new_record?
    = f.input :namespace
  - else
    = image_tag @candidate.photo_url(:small), onerror: "this.style.display = 'none';"
  = f.simple_fields_for :photos, Photo.new do |p|
    = p.input :image
  = f.button :submit
