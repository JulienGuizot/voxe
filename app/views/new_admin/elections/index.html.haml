%link{href: "https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css", rel: "stylesheet"}
%script{src: "https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"}




.row-fluid
  .span12
    %h2
      Elections
      %small
        - if can? :create, Election
          = link_to "New election", new_new_admin_election_path, class: "btn btn-info btn-small"
    .quick-search-div.col-md-6.col-md-offset-2.col-sm-6
      = form_for :search, html: {class: 'form-search', style: 'float: right;'} do |f|
        %label{:for => "quick_search"}
          = t('backoffice.election_search')
        .input-prepend
          %span.add-on
            %i.icon-search
          = f.text_field :search, id: "quick_search", class: "input-medium"
    %br
    %h3="Futures elections"
    = render 'election_item', elections: @future_elections

    %br
    %h3="Pasts elections"
    = render 'election_item', elections: @past_elections

:javascript
  $('.toggle-two').bootstrapToggle();
  $('.toggle.btn').css('cssText', 'min-width: 50px !important; min-height: 20px !important;');




