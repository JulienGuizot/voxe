- unless f.object.picture? 
  = f.input :picture, label: "Image de profil"
= f.input :political_party, label: "Parti politique"
= f.input :address, label: "Adresse"
= f.input :postal_code, label: "Code postal"
= f.input :birthday, placeholder: t('backoffice.date_hint'), label: "Date de naissance"
= f.input :phone, label: "Téléphone"
= f.input :email, placeholder: "contact@voxe.org"
= render "url", f: f, name: "Site Internet", input: :website, website:"", hint: "Site Internet" 
= render "url", f: f, name: "", input: :facebook, label: image_tag('web/icons/facebook.png'), website: "facebook", hint: "Adresse de votre profil"
= render "url", f: f, name: "", input: :twitter, label: image_tag('web/icons/twitter.png'), website: "twitter", hint: "Adresse de votre profil"
= render "url", f: f, name: "", input: :youtube, label: image_tag('web/icons/youtube.png'), website: "youtube", hint: "Adresse de votre profil"
= render "url", f: f, name: "", input: :wikipedia, label: image_tag('web/icons/wikipedia.png'), website: "wikipedia", hint: "Adresse de votre biographie"
= render "url", f: f, name: "", input: :cibul, label: "Cibul", website: "cibul", website: 'cibul', hint: "Cibul"
= f.input :biography, as: :text, label: "Biographie", input_html: { class: "input-xxlarge", maxlength: 300, rows: 5 }, hint: tag(:span, id: 'biography-counter'), placeholder: '300 caractères maximum'

= f.input :introduction, as: :text, label: "Introduction", input_html: { class: "input-xxlarge", maxlength: 1000, rows: 16 }, hint: tag(:span, id: 'introduction-counter'), placeholder: '1000 caractères maximum'

:coffee
  $ ->
    $('#candidacy_candidate_profile_biography').simplyCountable({
      counter: '#biography-counter'
      maxCount: 300
      countDirection: 'up'
    })
    $('#candidacy_candidate_profile_introduction').simplyCountable({
      counter: '#introduction-counter'
      maxCount: 1000
      countDirection: 'up'
    })
